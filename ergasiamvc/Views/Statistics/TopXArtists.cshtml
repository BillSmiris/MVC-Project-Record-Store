@model IEnumerable<ergasiamvc.Models.Artist>

@{
    ViewBag.Title = "Top Artists";
}

<h2>Top Artists</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Statistics</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="nor">Number of results</label>
            <div class="col-md-10">
                <input class="form-control" type="number" id="nor" name="nor" min=1 value="@ViewBag.NumberOfResults">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="from">From</label>
            <div class="col-xs-6 col-sm-5 col-md-3 col-lg-3">
                <div class="input-group date" id="frompicker">
                    <input class="form-control" type="text" id="from" name="from" value="@ViewBag.From">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="to">To</label>
            <div class="col-xs-6 col-sm-5 col-md-3 col-lg-3">
                <div class="input-group date" id="topicker">
                    <input class="form-control" type="text" id="to" name="to" value="@ViewBag.To">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Go" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table mt-5">
        <tr>
            <th>
                Artist
            </th>
        </tr>
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
                i++;
            }
        }

    </table>
}
