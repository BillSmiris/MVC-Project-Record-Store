@model ergasiamvc.Models.Playlist

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Playlist</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    <h4>Tracks</h4>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Duration
            </th>
            <th>
                Genre
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model.Tracks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @{
                        float minutes = item.Milliseconds / 60000;
                        float seconds = item.Milliseconds / 1000 - minutes * 60;
                    }
                    @minutes:@if (seconds < 10)
                    {<text>0</text>}@seconds
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "../Tracks/Details", new { id = item.TrackId })
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlaylistId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
